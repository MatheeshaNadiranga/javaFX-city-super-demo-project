<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="900.0" prefWidth="1400.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.acpt.citysuper.controller.CustomerController">

    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label style="-fx-font-size: 36; -fx-text-fill: white;" text="ðŸ‘¥" />
                <Label text="Customer Management System" textFill="WHITE">
                    <font>
                        <Font name="SansSerif Bold" size="32.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <!-- Left Side - Search and Form -->
    <left>
        <VBox prefWidth="380.0" spacing="25.0" style="-fx-background-color: white; -fx-padding: 30;">
            <effect>
                <DropShadow color="rgba(0, 0, 0, 0.1)" offsetX="2.0" radius="10.0" />
            </effect>

            <!-- Search Box -->
            <VBox spacing="15.0" style="-fx-background-color: #F8F9FA; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #E0E0E0; -fx-border-radius: 10; -fx-border-width: 1;">
                <Label text="Search Customer" textFill="#667eea">
                    <font>
                        <Font name="SansSerif Bold" size="18.0" />
                    </font>
                </Label>

                <TextField fx:id="searchInput" promptText="Enter Customer ID" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>

                <Button maxWidth="Infinity" onAction="#search" style="-fx-background-color: #5A67D8; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14; -fx-font-weight: bold; -fx-cursor: hand;" text="ðŸ” Search">
                    <effect>
                        <DropShadow color="rgba(90, 103, 216, 0.3)" offsetY="3.0" radius="8.0" />
                    </effect>
                </Button>
            </VBox>

            <!-- Customer Details Form -->
            <VBox spacing="15.0">
                <!-- Customer ID Field -->
                <VBox spacing="8.0">
                    <Label text="Customer ID" textFill="#333333">
                        <font>
                            <Font name="SansSerif Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtCustomerId" promptText="e.g., CUS001" style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </TextField>
                </VBox>

                <!-- Phone Number Field -->
                <VBox spacing="8.0">
                    <Label text="Phone Number" textFill="#333333">
                        <font>
                            <Font name="SansSerif Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtPhoneNumber" promptText="e.g., 0771234567" style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </TextField>
                </VBox>

                <!-- Name Field -->
                <VBox spacing="8.0">
                    <Label text="Name" textFill="#333333">
                        <font>
                            <Font name="SansSerif Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtName" promptText="e.g., John Doe" style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </TextField>
                </VBox>

                <!-- Address Field -->
                <VBox spacing="8.0">
                    <Label text="Address" textFill="#333333">
                        <font>
                            <Font name="SansSerif Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtAddress" promptText="e.g., 123 Main St, Colombo" style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </TextField>
                </VBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="10.0">
                <Button onAction="#btnDelete" prefWidth="110.0" style="-fx-background-color: #E53E3E; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 13; -fx-font-weight: bold; -fx-cursor: hand;" text="ðŸ—‘ï¸ Delete">
                    <effect>
                        <DropShadow color="rgba(229, 62, 62, 0.3)" offsetY="3.0" radius="8.0" />
                    </effect>
                </Button>

                <Button onAction="#btnUpdate" prefWidth="110.0" style="-fx-background-color: #F59E0B; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 13; -fx-font-weight: bold; -fx-cursor: hand;" text="âœï¸ Update">
                    <effect>
                        <DropShadow color="rgba(245, 158, 11, 0.3)" offsetY="3.0" radius="8.0" />
                    </effect>
                </Button>

                <Button onAction="#btnSave" prefWidth="110.0" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 13; -fx-font-weight: bold; -fx-cursor: hand;" text="ðŸ’¾ Save">
                    <effect>
                        <DropShadow color="rgba(102, 126, 234, 0.4)" offsetY="3.0" radius="8.0" />
                    </effect>
                </Button>
            </HBox>
        </VBox>
    </left>

    <!-- Right Side - Customers Table -->
    <center>
        <VBox spacing="20.0" style="-fx-padding: 30;">
            <!-- Table Title -->
            <Label text="Customers List" textFill="#667eea">
                <font>
                    <Font name="SansSerif Bold" size="24.0" />
                </font>
            </Label>

            <!-- Table -->
            <TableView fx:id="tblCustomers" maxWidth="960.0" style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCustomerId" prefWidth="150.0" style="-fx-alignment: CENTER;" text="ID" />
                    <TableColumn fx:id="colPhoneNumber" prefWidth="180.0" style="-fx-alignment: CENTER;" text="Phone Number" />
                    <TableColumn fx:id="colName" prefWidth="299.0" text="Name" />
                    <TableColumn fx:id="colAddress" prefWidth="330.0" text="Address" />
                </columns>
                <effect>
                    <DropShadow color="rgba(0, 0, 0, 0.1)" radius="10.0" />
                </effect>
            </TableView>
        </VBox>
    </center>

</BorderPane>
